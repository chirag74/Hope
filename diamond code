//Diamond code//
#include<iostream>
using namespace std;
int main()
{
	int n;
	cin>>n;
	int m;
	if(n%2==0)
	{
		m=n/2;
	}
	else
	{
	
	m=(n/2)+1;
}
	int i=1;
	while(i<=m)
	{
		int k=1;
		while(k<=m-i)
		{
			cout<<" ";
			k++;
		}
		int j=1;
		while(j<=2*i-1)
		{
			cout<<"*";
			j++;
		}
		cout<<endl;
		i++;
		
	}
	i=m-1;
	while(i>=1)
	{
		int k=1;
		while(k<=m-i)
		{
			cout<<" ";
			k++;
		}
		int j=1;
		while(j<=2*i-1)
		{
			cout<<"*";
			j++;
		}
		cout<<endl;
		i--;
	}
}
